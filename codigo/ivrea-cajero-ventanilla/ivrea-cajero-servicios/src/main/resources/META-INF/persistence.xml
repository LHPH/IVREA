<persistence  xmlns="http://java.sun.com/xml/ns/persistence"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
              http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
              version="2.0">
   <persistence-unit name="IvreaPersistence" transaction-type="JTA">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>jdbc/ivrea</jta-data-source>
      <class> mx.gob.ivrea.api.entity.ClienteEntity</class>
      <class> mx.gob.ivrea.api.entity.CuentaEntity</class>
      <class> mx.gob.ivrea.api.entity.TarjetaEntity</class>
      <class> mx.gob.ivrea.api.entity.BancoEntity</class>
      <class> mx.gob.ivrea.api.entity.MovimientoEntity</class>
      
      <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.WeblogicTransactionManagerLookup" />
            <property name="hibernate.transaction.factory_class" value="org.hibernate.transaction.JTATransactionFactory" />   
            <property name="hibernate.format_sql" value="true" />
      </properties>
   </persistence-unit>
</persistence>      